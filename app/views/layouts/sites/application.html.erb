<!DOCTYPE html>
<html>
<head>
  <title>House</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>

<body role="document">
		
	<%= render 'layouts/sites/header' %>

	<div class="container">
    <div class="row">
      <div class="col-sm-12">
        <% if flash[:social] %>
          <div class="row">
            <div class="col-sm-12">
              <div class="alert alert-danger" role="alert">
                <%= flash[:social] %>
              </div>
            </div>
          </div>
        <% end %>
        <% if flash[:notice] %>
          <div class="row">
            <div class="col-sm-12">
              <div class="alert alert-info" role="alert">
                <%= flash[:notice] %>
              </div>
            </div>
          </div>
        <% end %>
        <%= yield %>
      </div>     
    </div>  
  </div>

</body>

</body>
</html>
