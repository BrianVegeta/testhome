<%= form_for(resource, as: resource_name, url: registration_path(resource_name, (@organization ? {organization_id: @organization.id} : {})), :html => { class: '', :role => "form", autocomplete: 'off', style: "border: 1px solid #CAC7C7; padding: 10px;border-radius: 3px; margin-top: 20px;" }) do |f| %>
  <h2>免費註冊</h2>
  <% unless resource.errors.empty? %>
    <div class="alert alert-danger" role="alert">
      <% resource.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </div>
  <% end %>
  
  <div class="form-group">
    <%= f.label :'電子信箱' %>
    <%= f.text_field :email, :class => 'form-control' %>
  </div>
  
  <div class="form-group">
    <%= f.label :'密碼' %>
    <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :'再次輸入密碼' %>
    <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control' %>
  </div>

  <button type="submit" class="btn btn-success" style="width: 100%">註冊</button>
<% end %>