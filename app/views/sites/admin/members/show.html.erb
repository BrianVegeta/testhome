<div class="row">
	<div class="col-sm-8 col-sm-offset-2">
		<table class="table table-bordered">
			<tr>
				<th>ID</th>
				<td><%= @sites_admin_member.user.id %></td>
			</tr>
			<tr>
				<th>舊會員帳號</th>
				<td>
					<%= @sites_admin_member.user.login %>
				</td>
			</tr>
			<tr>
				<th>電子信箱</th>
				<td>
					<%= @sites_admin_member.user.email %>
				</td>
			</tr>
			<tr>
				<th>名字</th>
				<td>
					<% if @sites_admin_member.user.name.present? %>
						<%= @sites_admin_member.user.name %>
					<% else %>
						<span class="label label-warning">未填</span>
					<% end %>
				</td>
			</tr>
			<tr>
				<th>暱稱</th>
				<td>
					<% if @sites_admin_member.user.nick_name.present? %>
						<%= @sites_admin_member.user.nick_name %>
					<% else %>
						<span class="label label-warning">未填</span>
					<% end %>
				</td>
			</tr>
			<tr>
				<th>稱謂</th>
				<td>
					<% if @sites_admin_member.user.sex.nil? %>
						<span class="label label-warning">未填</span>
					<% elsif @sites_admin_member.user.sex %>
						先生
					<% else %>
						女士
					<% end %>
				</td>
			</tr>
			<tr>
				<th>電話</th>
				<td>
					<% if !@sites_admin_member.user.phone.present? && !@sites_admin_member.user.phone2.present? %>
						<span class="label label-warning">未填</span>
					<% else %>
						<%= @sites_admin_member.user.phone %>
						<br>
						<%= @sites_admin_member.user.phone2 %>
					<% end %>
				</td>
			</tr>
			<tr>
				<th>地址</th>
				<td>
					<% if @sites_admin_member.user.main_area %>
						<span class="label label-info">
							<%= Area::MAIN_AREA[@sites_admin_member.user.main_area] %>
						</span>&nbsp;
					<% end %>
					<% if @sites_admin_member.user.main_area && @sites_admin_member.user.sub_area %>
						<span class="label label-info">
							<%= Area::SUB_AREA[@sites_admin_member.user.main_area][@sites_admin_member.user.sub_area] %>
						</span>&nbsp;
					<% end %>
					<% if !@sites_admin_member.user.address.present? && !@sites_admin_member.user.main_area.present? && !@sites_admin_member.user.sub_area.present? %>
						<span class="label label-warning">未填</span>
					<% else %>
						<%= @sites_admin_member.user.address %>
					<% end %>
				</td>
			</tr>
			<tr>
				<th>驗證狀態</th>
				<td>
					<% if @sites_admin_member.user.confirmed_at.present? %>
						<%= @sites_admin_member.user.confirmed_at.strftime("%Y/%m/%d %H:%M:%S") %> 通過驗證
					<% else %>
						<span class="label label-warning">未通過</span>
					<% end %>
				</td>
			</tr>
			<tr>
				<th>建立於</th>
				<td>
					<%= @sites_admin_member.user.created_at.strftime("%Y/%m/%d %H:%M:%S") %>
				</td>
			</tr>
			<tr>
				<th>更新於</th>
				<td>
					<%= @sites_admin_member.user.updated_at.strftime("%Y/%m/%d %H:%M:%S") %>
				</td>
			</tr>
			<tr>
				<th>最後登入</th>
				<td>
					<% if @sites_admin_member.user.last_sign_in_at %>
						<%= @sites_admin_member.user.last_sign_in_ip %>
						--
						<%= @sites_admin_member.user.last_sign_in_at.strftime("%Y/%m/%d %H:%M:%S") %>
					<% else %>
						<span class="label label-warning">尚未登入</span>
					<% end %>
				</td>
			</tr>
			<tr>
				<th>登入次數</th>
				<td>
					<%= @sites_admin_member.user.sign_in_count %>
				</td>
			</tr>
		</table>
		<a href="<%= params[:recall] || admin_users_path %>" class="btn btn-info">返回</a>
	</div>
</div>
