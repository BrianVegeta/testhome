.form-group.house-area-row
  %label.control-label 
    %span{style: 'color: red;'} *
    登記總面積
  .col.area-amount{class: "#{f.error_class :house_total_area_amount}"}
    = f.text_field :house_total_area_amount, class: 'form-control error-tooltip', maxlength: 7, data: {errormessage: "#{f.error_message :house_total_area_amount}"}
  .col
    - types = Item::RentLand::AREA_UNITS.map {|k, v| [v, k] }
    = f.select :house_area_unit, types, {}, {class: 'form-control house-area-unit-select'}
  .col
    %label.radio-inline
      = f.radio_button :house_area_include_parking, true
      含面積車位
    %label.radio-inline
      = f.radio_button :house_area_include_parking, false
      不含面積車位
.form-group.group-lg-hr

