:javascript
  var $houseAreaRows        = $('.house-area-row');
  var $houseAreaUnitSelect  = $('.house-area-unit-select');

  $houseAreaUnitSelect.change(function(e) {
    var unit = $(this).find('option:selected').text();
    $houseAreaRows.find('.col.area-unit').text(unit);
  });  