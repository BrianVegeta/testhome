<div class="form-group">
  <label class="col-sm-2 control-label">格局(現況)</label>
  <div class="col-sm-8">
    <div class="row">
      <div class="col-sm-2">
        <div class="input-group">
          <%= f.text_field :pattern_room, class: 'form-control' %>
          <span class="input-group-addon">房</span>
        </div>
      </div>
      <div class="col-sm-2">
        <div class="input-group">
          <%= f.text_field :pattern_living, class: 'form-control' %>
          <span class="input-group-addon">廳</span>
        </div>
      </div>
      <div class="col-sm-2">
        <div class="input-group">
          <%= f.text_field :pattern_bath, class: 'form-control' %>
          <span class="input-group-addon">衛</span>
        </div>
      </div>
      <div class="col-sm-2">
        <div class="input-group">
          <%= f.text_field :pattern_balcony, class: 'form-control' %>
          <span class="input-group-addon">陽台</span>
        </div>
      </div>
    </div>
  </div>
