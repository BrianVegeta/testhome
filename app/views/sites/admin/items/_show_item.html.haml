- item = @sites_admin_item
- photos = @item_photos
%div{style: 'margin-top: 10px;'}
.content-main.content-center
  .content-header
    .header-inner
      %h3.over-write
        = translate_item_type_action item
        = translate_item_type_name item
  .content-inner
    .item-header
      .item-header-photo
        .fotorama{data: {nav: :thumbs}}
          - if photos.any?
            - photos.each do |p|
              %a{href: "#{p.file.url(:view)}"}
                %img{src: "#{p.file.url(:thumb)}"}
          - else 
            %img{src: "http://rent.591.com.tw/images/index/house/no_photo.png"}
      .item-header-info
        = render 'info_header_rent_place.html.haml', {item: item}
    %hr
    = render 'info_else', {item: item}
    %hr
    = render 'info_description', {item: item}
    %hr
    = render 'info_gallary', {photos: photos}