<style type="text/css">
.control-panel {
	background-color: #FFF000;
	position: fixed; 
	min-height: 60px; 
	z-index: 1035; 
	display: block; 
	top: 0;
	left: 0;
	right: 0;
}
</style>

<div ng-app="style" ng-controller="newController">
	<div class="control-panel" ng-controller="controlPanelController as controlPanel">
		<div class="btn btn-default" href="#" ng-click="controlPanel.showForm()">儲存樣式</div>
	</div>
	<div style="padding-top: 60px;"></div>

	<div>
		<input type="hidden" value="123" ng-model="organizationId">
		<input type="hidden" value="edit" ng-model="actionType">
		<div style-editor></div>
		<div id="context-menu">
		  <ul class="dropdown-menu" role="menu">
		    <li><a tabindex="-1" href="#" action="resizeable-nav-header">resize</a></li>
		    <li><a tabindex="-1" href="#" action="cancel">cancel</a></li>
		    <li><a tabindex="-1" href="#" action="test">test</a></li>
		  </ul>
		</div>
	</div>

	<div class="modal fade" id="save_dialog" style="padding-top: 100px;" ng-controller="styleFormController as styleForm">
	  <div class="modal-dialog">
	    <div class="modal-content">
	      <div class="modal-header">
	        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
	        <h4 class="modal-title">儲存樣式</h4>
	      </div>
	      <div class="modal-body">

					<%= form_for [:sites, :admin, @sites_admin_style], :html => { class: 'form-horizontal', :role => "form", autocomplete: 'off' } do |f| %>
					  <div class="form-group">
					    <div class="col-sm-12">
					      <%= f.text_field :name, :class => 'form-control', placeholder: '樣式名稱' %>
					    </div>
					  </div>

					  <div class="form-group">
					    <div class="col-sm-12">
					      <%= f.text_field :description, :class => 'form-control', placeholder: '附註' %>
					    </div>
					  </div>
					<% end %>

	      </div>
	      <div class="modal-footer">
	        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
	        <button type="button" class="btn btn-primary" ng-click="styleForm.save()">Save changes</button>
	      </div>
	    </div><!-- /.modal-content -->
	  </div><!-- /.modal-dialog -->
	</div><!-- /.modal -->

</div>
